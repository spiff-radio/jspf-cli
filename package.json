{
  "name": "jspf-playlist",
  "version": "1.0.0",
  "description": "The Node.js tool to handle JSPF Playlists",
  "main": "./build/cli.js",
  "bin": {
    "jspf": "./build/cli.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/cli/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/cli/index.ts",
    "create": "npm run build && npm run test",
    "build": "tsc -p .",
    "local": "sudo npm i -g && jspf",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spiff-radio/jspf-playlist.git"
  },
  "keywords": [
    "jspf",
    "playlist",
    "json"
  ],
  "author": "spiff-radio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spiff-radio/jspf-playlist/issues"
  },
  "homepage": "https://github.com/spiff-radio/jspf-playlist#readme",
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "clear": "^0.1.0",
    "figlet": "^1.5.2",
    "jsonschema": "^1.4.1",
    "lodash": "^4.17.21",
    "m3u8-parser": "^6.0.0",
    "reflect-metadata": "^0.1.13",
    "xml-js": "^1.6.11",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
